    <!-- table of data-->
    <div class="ml-5">
        <br />
        <h2>Shippers Table</h2>
        <table id="shippersTable" class="table table-hover w-50">
            <thead>
                <th>shipper_id</th>
                <th>shipper_name</th>
                <th>shipper_account_num</th>
                <th>shipper_contact_name</th>
                <th>shipper_contact_email</th>
            </thead>
            <!-- sample table body, will be built though DOM and a GET / SELECT on page load -->
            <tbody id="shippersEntries">
                {% for val in ship_data %}
                <tr>
                    <td>{{val['shipper_id']}} </td>
                    <td>{{val['shipper_name']}} </td>
                    <td>{{val['shipper_account_num']}} </td>
                    <td>{{val['shipper_contact_name']}} </td>
                    <td>{{val['shipper_contact_email']}} </td>
                </tr>
                {% endfor %}
            </tbody>
        </div>
    </table>
    
<!--insert row-->
    <br />
    <h2>Insert</h2>
    <form method = "post">
        <div class="form-group">
            <label>shipper_name<input type="text" name="shipper_name" value="" /></label>
            <label>shipper_account_num<input type="text" name="shipper_account_num" value="" /></label>
            <label>shipper_contact_name<input type="text" name="shipper_contact_name" value="" /></label>
            <label>shipper_contact_email<input type="text" name="shipper_contact_email" value="" /></label>
            <input type="submit" name="insert_shipper_submit" id="newRow" value="Insert Shipper" class="btn btn-primary"/>
        </div>
        <form id="insertShipper">
    </form>
